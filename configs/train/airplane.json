{
    "model": {
        "encoder": {
            "blocks": [3, 64, 128, 256, 512]
        },
        "decoder": {
            "blocks": [517, 256, 128, 64, 3]
        },
        "mapping_network": {
            "latent_dim": 512,
            "n_blocks": 2
        },
        "num_coarse": 512,
        "num_dense": 2048,
        "grid_size": 2,
        "grid_scale": 0.05
    },
    "dataset":{
        "train": {
            "dir_path": "/home/chukhran/datasets/completion/shapenet/ShapeNetPointCloud",
            "split": "train",
            "classes": ["02691156"],
            "use_random_rotation": true,
            "num_samples": 4
        },
        "validation": {
            "dir_path": "/home/chukhran/datasets/completion/shapenet/ShapeNetPointCloud",
            "split": "validation",
            "classes": ["02691156"],
            "use_random_rotation": false,
            "num_samples": 4
        }
    },
    "dataloader": {
        "batch_size": 8,
        "num_workers": 4
    },
    "optimizer": {
        "type": "Adam",
        "hyperparameters": {
            "lr": 0.0001,
            "weight_decay": 0.0001,
            "betas": [0.9, 0.999]
        }
    },
    "scheduler": {
        "type": "StepLR",
        "hyperparameters": {
            "step_size": 1000,
            "gamma": 0.5
        }
    },
    "epochs": 2000,
    "save_path": "checkpoints/airplane",
    "save_interval": 50
}
